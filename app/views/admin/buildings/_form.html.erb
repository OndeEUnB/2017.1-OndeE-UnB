<div class="bg-white">
  <div class="row no-space">
    <div class="col-lg-5">
      <div class="card card-plain">
        <div class="card-body">
          <div class="card-block px-0">
            <%= form_for(building, url: url, validate: true) do |form| %>
            <div class="row">
              <div class="form-group col-md-6">
                <%= form.label :acronym %>
                <%= form.text_field :acronym, class: 'form-control' %>
              </div>
              <div class="form-group col-md-6">
                <%= form.label :title %>
                <%= form.text_field :title, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <%= form.label :phone %>
                <%= form.number_field :phone, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <%= form.label :latitude %>
                <%= form.text_field :latitude, class: 'form-control' %>
              </div>
              <div class="form-group col-md-6">
                <%= form.label :longitude %>
                <%= form.text_field :longitude, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <%= form.label :image %>
                <%= form.file_field :image, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= form.hidden_field :geo_data %>
              <%= form.submit 'Salvar', class: 'btn btn-fill btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-7">
    <div id="map"></div>
  </div>
</div>
