<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <%= form_for(plan, url: url, validate: true) do |form| %>
          <div class="form-group">
            <%= form.label :building_id %>
            <%= form.select :building_id, options_from_collection_for_select(@buildings, :id, :acronym), {}, { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= form.label :level %>
            <%= form.number_field :level, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :image %>
            <%= form.hidden_field :image, value: plan.cached_image_data, data: { image: plan.image_url } %>
            <%= form.file_field :image, class: 'form-control plan_image_file'%>
          </div>
          <div class="form-group">
            <%= form.hidden_field :geo_data %>
            <%= form.submit 'Salvar', class: 'btn btn-fill btn-success', id: "Salvar" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div id="map"></div>
    </div>
  </div>
</div>
