<div class="content">
  <div class="row">
    <div class="col-12">
        <%= notice.html_safe unless notice.blank? %>

      <div class="card">
        <div class="card-body table-responsive p-0">
          <table class="table table-hover table-striped m-0">
            <thead>
              <tr>
                <th>Título</th>
                <th>Andar</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @plans.find_each do |plan| %>
                <tr>
                  <td><%= plan.building.title %></td>
                  <td><%= plan.level %></td>
                  <td>
                    <%= edit_link edit_admin_plan_path(plan) %>
                    <%= destroy_link admin_plan_path(plan), 'Você tem certeza que deseja apagar esta planta?' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= paginate @plans, window: @pagination_windows %>
    </div>
  </div>
</div>
