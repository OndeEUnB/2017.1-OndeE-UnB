                  <a href="#" class="dropdown-item">
                    <i class="icon-calendar5"></i>
                    Calender</a>
                  <div class="dropdown-divider"></div>
                  <a href="#" class="dropdown-item">
                    <i class="icon-power3"></i>
                    Logout</a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

